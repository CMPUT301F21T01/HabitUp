<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/btn_capture_photo"
        android:layout_width="180dp"
        android:layout_height="191dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ListView
        android:id="@+id/profile_view_habits_list"
        android:layout_width="240dp"
        android:layout_height="193dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_capture_photo"
        app:layout_constraintVertical_bias="0.441" />

    <TextView
        android:id="@+id/userInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:hint="X"
        app:layout_constraintBottom_toBottomOf="@+id/btn_capture_photo"
        app:layout_constraintEnd_toEndOf="@+id/btn_capture_photo"
        app:layout_constraintStart_toStartOf="@+id/btn_capture_photo"
        app:layout_constraintTop_toTopOf="@+id/btn_capture_photo" />


</androidx.constraintlayout.widget.ConstraintLayout>