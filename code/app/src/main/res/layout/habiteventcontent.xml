<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    android:orientation="horizontal"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="298dp">

        <Button
            android:id="@+id/edit_habit_event_button"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="11dp"
            android:text="Edit"
            android:textSize="8sp"
            />

        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/textViewDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="?android:attr/autofilledHighlight" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="194dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="88dp"
            android:text="Date: 10/14/2021"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewReflection"
            android:layout_width="370dp"
            android:layout_height="35dp"

            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="60dp"
            android:text="Reflection: I feel so well rested!"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="280dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="17dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Edmonton"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="33dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="15dp"
            android:text="Location:"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="43dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/textView6"
            app:srcCompat="@drawable/locationpin" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="11dp"
            android:text="Delete"
            android:textSize="8sp" />

        <Button
            android:id="@+id/QR_button"
            android:layout_width="64dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:text="QR" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
