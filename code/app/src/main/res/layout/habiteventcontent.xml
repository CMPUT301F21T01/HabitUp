<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    android:orientation="horizontal"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="298dp">

        <ImageButton
            android:id="@+id/edit_habit_event_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/textViewDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="?android:attr/autofilledHighlight" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="194dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="88dp"
            android:text="Date: 10/14/2021"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewReflection"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="60dp"
            android:text="Reflection: I feel so well rested!"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="280dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="15dp"
            android:text="Edmonton"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="15dp"
            android:text="Location:"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginBottom="22dp"
            app:srcCompat="@android:drawable/btn_star" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

